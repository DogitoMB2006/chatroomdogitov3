{
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Service-Worker-Allowed", "value": "/" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; connect-src 'self' https://*.vercel.app; script-src 'self' 'unsafe-inline'; frame-ancestors 'none'" }
      ]
    },
    {
      "source": "/sw.js",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
}